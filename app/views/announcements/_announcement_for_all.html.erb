<% if current_announcement.exists? && !announcement_hidden?(current_announcement) %>
  <div class="alert alert-block alert-success">
    <button type="button" class="close"><%= link_to_function "x", "hideAnnouncement('announcement_#{current_announcement.created_at}')" %></button>
    <span><%= current_announcement.body.html_safe %></span>
  </div>
<% end %>
